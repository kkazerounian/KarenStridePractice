

<div class="panel panel-primary center">
  <div class="panel-heading"><h1>Show Pin</h1></div>
  <div class="panel-body">
  <%= image_tag @pin.image.url( :medium) %><br/>
  <strong>Description:</strong> <%= @pin.description %><br/>
  <strong>Uploaded by:</strong> <%= @pin.user.name if @pin.user %><br/>
<div class="panel-footer">
<% if @pin.user == current_user %>
<%= link_to 'Edit', edit_pin_path(@pin), class:'btn btn-primary' %> |
<% end %>
<%= link_to 'Back', pins_path, class:'btn btn-primary' %>
</div>
</div>
</div>
