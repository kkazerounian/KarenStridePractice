
<div class="center">
    <%= render 'home/jumbotron' unless user_signed_in? %>
    <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>
<div id="pins" class="transitions-enabled"> 
    
    <% @pins.each do |pin| %>
      
    <div class="box">
        <div class="panel panel-default">
        <div class="panel-body">
        <div class="thumbnail">
        <%= image_tag pin.image.url( :thumb) %>
        </div>
        <strong>Description:</strong> <%= pin.description %><br/>
        <strong>Uploaded by:</strong> <%= pin.user.name if pin.user %><br/><br/>
        <div class="panel-footer">
        <%= link_to 'Show', pin, class:'btn btn-info btn-sm'%>
        <% if pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(pin), class:'btn btn-success btn-sm' %>
        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-sm' %>
        <% end %>
        </div>
        </div>
        </div>
    </div>
    <% end %>
<!--
<%= link_to 'New Pin', new_pin_path, class:'btn btn-primary' %>
-->
</div>
<div class="center">
    <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>