
<div class="center">
    <%= render 'home/jumbotron' unless user_signed_in? %>
    <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>
<div id="pins" class="transitions-enabled"> 
    
    <% @pins.each do |pin| %>
      
    <div class="box">
        <div class="panel panel-default">
        <div class="panel-body">
        
        <%= link_to image_tag(pin.image.url( :medium)), pin %>
        
        <strong>Description:</strong> <%= pin.description %><br/>
        <strong>Pinned by:</strong> <%= pin.user.name if pin.user %><br/>
        <strong>Uploaded Date:</strong> <%= pin.image_updated_at %><br/><br/>
        <div class="panel-footer">
        
        <% if pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(pin), class:'btn btn-success btn-xs' %>
        <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-xs' %>
        <% end %>
        </div>
        </div>
        </div>
    </div>
    <% end %>
<!--
<%= link_to 'New Pin', new_pin_path, class:'btn btn-primary' %>
-->
</div>
<div class="center">
    <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>