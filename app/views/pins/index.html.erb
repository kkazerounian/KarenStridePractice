<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
  <div class="panel-heading"><h1>Listing Pins</h1></div>
  <div class="panel-body">
  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= link_to 'Show', pin, class:'btn btn-info'%></td>
        <td><%= link_to 'Edit', edit_pin_path(pin), class:'btn btn-success' %></td>
        <td><%= button_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
    <% end %>
      </tr>
    </tbody>
  </table>
<br>

<%= link_to 'New Pin', new_pin_path %>
</div>
</div>