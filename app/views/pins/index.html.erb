<p id="notice"><%= notice %></p>

    
<div id="pins" class="transitions-enabled"> 
    
    <% @pins.each do |pin| %>
      
       <div class="box">
      <div class="panel panel-default">
        <%= image_tag pin.image.url( :thumb) %><br/>
        <strong>Description:</strong><%= pin.description %><br/>
        <strong>Uploaded by:</strong><%= pin.user.name if pin.user %><br/>
        <%= link_to 'Show', pin, class:'btn btn-info'%>
        <% if pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(pin), class:'btn btn-success' %>
        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
        <% end %>
        </div>
    
    </div>
<% end %>

<%= link_to 'New Pin', new_pin_path, class:'btn btn-primary' %>
</div>
